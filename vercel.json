{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/main.py"
    },
    {
      "src": "/health",
      "dest": "/server/main.py"
    },
    {
      "src": "/test",
      "dest": "/server/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
} 